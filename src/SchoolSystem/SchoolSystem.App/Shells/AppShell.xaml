<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:r="clr-namespace:SchoolSystem.App.Views.Student"
    xmlns:s="clr-namespace:SchoolSystem.App.Views.Subject"
    xmlns:e="clr-namespace:SchoolSystem.App.Views.Evaluation"
    xmlns:en="clr-namespace:SchoolSystem.App.Views.Enrolled"
    xmlns:local="clr-namespace:SchoolSystem.App"
    xmlns:a="clr-namespace:SchoolSystem.App.Views.Activity"
    xmlns:enrolledActivity="using:SchoolSystem.App.Views.EnrolledActivity"
    x:Class="SchoolSystem.App.Shells.AppShell"
    x:Name="AppShellRoot"
    Shell.FlyoutBehavior="Disabled"
    Title="SchoolSystem.App">

    <TabBar>
        <ShellContent Title="Student List" ContentTemplate="{DataTemplate r:StudentListView}" Route="students" />
        <ShellContent Title="Subject List" ContentTemplate="{DataTemplate s:SubjectListView}" Route="subjects" />
    </TabBar>

</Shell>
