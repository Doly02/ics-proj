<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:r="clr-namespace:SchoolSystem.App.Views.Student"
    xmlns:s="clr-namespace:SchoolSystem.App.Views.Subject"
    xmlns:local="clr-namespace:SchoolSystem.App"
    xmlns:a="clr-namespace:SchoolSystem.App.Views.Activity"
    x:Class="SchoolSystem.App.Shells.AppShell"
    x:Name="AppShellRoot"
    Shell.FlyoutBehavior="Disabled"
    Title="SchoolSystem.App">

    <TabBar>
        <ShellContent Title="Home1" ContentTemplate="{DataTemplate local:MainPage}" Route="home1" />
        <ShellContent Title="Home2" ContentTemplate="{DataTemplate local:MainPage}" Route="home2" />
        <ShellContent Title="Edit Student" ContentTemplate="{DataTemplate r:StudentEditView}" Route="student/edit" />
        <ShellContent Title="Edit Activity" ContentTemplate="{DataTemplate a:ActivityEditView}" Route="activities/edit" />
        <ShellContent Title="Subject List" ContentTemplate="{DataTemplate s:SubjectListView}" Route="subjects" />
        <ShellContent Title="Activity List" ContentTemplate="{DataTemplate a:ActivityListView}" Route="activities" />
        <ShellContent Title="Student List" ContentTemplate="{DataTemplate r:StudentListView}" Route="students" />
    </TabBar>

</Shell>
