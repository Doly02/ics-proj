<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="SchoolSystem.App.Views.Activity.FilterRangePopup"
               Color="Transparent"
               Size="300,500">
    
    <Frame CornerRadius="20" Padding="0" Margin="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White">
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="Start:" FontAttributes="Bold"/>
            <DatePicker x:Name="StartDatePopup" />
            <TimePicker x:Name="StartTimePopup" />
            <Label Text="End:" FontAttributes="Bold"/>
            <DatePicker x:Name="EndDatePopup" />
            <TimePicker x:Name="EndTimePopup" />
            <Button Text="Enter" Clicked="EnterClick" BorderColor="#7AB2B2" />
            <Button Text="Reset Filters" Clicked="ResetFiltersClick" BorderColor="#FA7070" />
            <Button Text="Cancel" Clicked="CancelClick" />
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
