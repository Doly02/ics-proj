<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:SchoolSystem.App.Views"
                       xmlns:models="clr-namespace:SchoolSystem.BL.Models;assembly=SchoolSystem.BL"
                       xmlns:viewModels="clr-namespace:SchoolSystem.App.ViewModels"

                       x:Class="SchoolSystem.App.Views.Activity.ActivityEditView"
                       x:DataType="viewModels:ActivityEditViewModel"
                       Style="{StaticResource ContentPageStyle}">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <Button Text="Back" Command="{Binding BackCommand}" />
            <!-- Activity name -->
            <Entry Placeholder="Name" Text="{Binding Activity.Name, Mode=TwoWay}" />
            
            <!-- Activity start -->
            <Label Text="Start date:" />
            <HorizontalStackLayout>
                <DatePicker Date="{Binding StartDate, Mode=TwoWay}" />
                <TimePicker Time="{Binding StartTime, Mode=TwoWay}" />
            </HorizontalStackLayout>
            
            <!-- Activity end -->
            <Label Text="End date:" />
            <HorizontalStackLayout>
                <DatePicker Date="{Binding EndDate, Mode=TwoWay}" />
                <TimePicker Time="{Binding EndTime, Mode=TwoWay}" />
            </HorizontalStackLayout>
            
            <!-- Activity place -->
            <Entry Placeholder="Place" Text="{Binding Activity.Place, Mode=TwoWay}" />
            
            <!-- Activity type -->
            <Picker Title="Type:"
                    ItemsSource="{Binding ActivityTypes}"
                    SelectedItem="{Binding SelectedActivityType}" />
            
            <!-- Activity description -->
            <Entry Placeholder="Description" Text="{Binding Activity.Description, Mode=TwoWay}" />

            <!-- Button For Storing Data -->
            <Button Text="Enter" Command="{Binding SaveCommand}" />
            <!-- Should Be Implemented Soon Indicator if Operation Succeeded or Not -->
        </VerticalStackLayout>
    </ScrollView>
</views:ContentPageBase>
