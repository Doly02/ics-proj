<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:SchoolSystem.App.Views"
                       xmlns:m="clr-namespace:SchoolSystem.BL.Models;assembly=SchoolSystem.BL"
                       xmlns:vm="clr-namespace:SchoolSystem.App.ViewModels"
                       x:Class="SchoolSystem.App.Views.Student.StudentListView"
                       Style="{StaticResource ContentPageStyle}"
                       x:Name="StudentListViewRoot"
                       x:DataType="vm:StudentListViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Student List -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="25" Padding="30">
                <CollectionView ItemsSource="{Binding StudList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:StudentListModel">
                            <Frame Margin="10" Padding="5" CornerRadius="10" BorderColor="#CCCCCC">
                                <StackLayout Orientation="Vertical" Margin="10">
                                    <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="{Binding Surname}" FontSize="14"/>
                                </StackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference StudentListViewRoot}, Path=BindingContext.GoToDetailCommand}" CommandParameter="{Binding Id}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>


        <!-- Bottom Bar With Buttons -->
        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Padding="10">
            <Button Text="Add" 
                    Command="{Binding GoToCreateCommand}"
                    TextColor="Black"/>
            <HorizontalStackLayout>
                <Entry Placeholder="Enter search text" 
                       Text="{Binding SearchText, Mode=TwoWay}"
                       WidthRequest="300" MinimumWidthRequest="200" MaximumWidthRequest="400" VerticalOptions="Center"
                       TextColor="Black"/>
                <Button Text="Search" 
                        Command="{Binding SearchCommand}" VerticalOptions="Center"
                        TextColor="Black"/>
            </HorizontalStackLayout>
            <Button Text="Sort By Surname Ascending" 
                    Command="{Binding SortStudentBySurnameAscendingCommand}"
                    TextColor="Black"/>
            <Button Text="Sort By Surname Descending" 
                    Command="{Binding SortStudentBySurnameDescendingCommand}"
                    TextColor="Black"/>
        </StackLayout>
    </Grid>
</views:ContentPageBase>
