<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:SchoolSystem.App.Views"
                       xmlns:viewModels="clr-namespace:SchoolSystem.App.ViewModels"
                       xmlns:models="clr-namespace:SchoolSystem.BL.Models;assembly=SchoolSystem.BL"
                       x:Class="SchoolSystem.App.Views.Evaluation.EvaluationDetailView"
                       x:DataType="viewModels:EvaluationDetailViewModel"
                       Style="{StaticResource ContentPageStyle}">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                <!-- Header -->
                <Label Text="EVALUATION"
                       FontSize="22"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <!-- Activity name -->
                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="of "
                           FontSize="18"
                           VerticalOptions="Center"
                           TextColor="#222222"/>
                    <Label Text="{Binding EvaluationDetail.ActivityName}" 
                           FontSize="18"
                           VerticalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#222222"/>
                </HorizontalStackLayout>
                <!-- Student name -->
                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="for "
                           FontSize="16"
                           VerticalOptions="Center"
                           TextColor="#444444"/>
                    <Label Text="{Binding EvaluationDetail.StudentFullName}" 
                           FontSize="16"
                           VerticalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#444444"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Points -->
            <Frame BorderColor="Black" 
                   BackgroundColor="#CCCCCC" 
                   Padding="0"
                   WidthRequest="300"
                   CornerRadius="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
        
                    <Label Text="Points" 
                           Grid.Column="0" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           Margin="10"
                           TextColor="Black"/>
                    <BoxView Grid.Column="1" BackgroundColor="Black" 
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="FillAndExpand"/>
                    <Label Text="{Binding EvaluationDetail.Score}" 
                           Grid.Column="2" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           Margin="10"
                           TextColor="Black"/>
                </Grid>
            </Frame>
            
            <!-- Note -->
            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Note:"
                       FontSize="16"
                       TextColor="Black"
                       HorizontalOptions="Start"/>
                <Frame BorderColor="Black" 
                       BackgroundColor="#CCCCCC"
                       MinimumWidthRequest="800"
                       Padding="10"
                       MinimumHeightRequest="100"
                       HorizontalOptions="Center">
                    <Label Text="{Binding EvaluationDetail.Note}" 
                           TextColor="Black"/>
                </Frame>
            </VerticalStackLayout>
            
            <!-- Buttons for operations -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Padding="10">
                <Button Text="Back" 
                        Command="{Binding BackCommand}" 
                        TextColor="Black"/>
                <Button Text="Edit"
                        Command="{Binding GoToEditCommand}"
                        BackgroundColor="#7AB2B2"
                        TextColor="Black"/>
                <Button Text="Delete"
                        Command="{Binding DeleteCommand}"
                        BackgroundColor="#FA7070"
                        TextColor="Black"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
    
</views:ContentPageBase>
