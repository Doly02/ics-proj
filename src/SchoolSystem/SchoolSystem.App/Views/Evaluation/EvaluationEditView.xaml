<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:SchoolSystem.App.Views"
                       xmlns:viewModels="clr-namespace:SchoolSystem.App.ViewModels"

                       xmlns:models="clr-namespace:SchoolSystem.BL.Models;assembly=SchoolSystem.BL"
                       x:Class="SchoolSystem.App.Views.Evaluation.EvaluationEditView"
                     
                       x:DataType="viewModels:EvaluationEditViewModel"
                       Style="{StaticResource ContentPageStyle}">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <!-- Back -->
            <Button Text="Back" Command="{Binding GoToDetailCommand}" />

            <!-- Activity name -->
            <Label Text="{Binding EvaluationDetail.ActivityName}"/>

            <!-- Points -->
            <Entry Placeholder="Score" Text="{Binding EvaluationDetail.Score, Mode=TwoWay}" />
            
            <!-- Note -->
            <Entry Placeholder="Note" Text="{Binding EvaluationDetail.Note, Mode=TwoWay}" />

            <!-- Save -->
            <Button Text="Enter" Command="{Binding SaveCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</views:ContentPageBase>
