<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:SchoolSystem.App.Views"
                       xmlns:m="clr-namespace:SchoolSystem.BL.Models;assembly=SchoolSystem.BL"
                       xmlns:vm="clr-namespace:SchoolSystem.App.ViewModels"
                       x:Class="SchoolSystem.App.Views.Subject.SubjectListView"
                       Style="{StaticResource ContentPageStyle}"
                       x:Name="SubjectListViewRoot"
                       x:DataType="vm:SubjectListViewModel">
    <Grid HorizontalOptions="FillAndExpand" RowDefinitions="*, *" ColumnDefinitions="*, *">
        <Button Grid.Row="1"
                Grid.Column="0"
                Padding="12, 6"
                Text="add"
                Command="{Binding GoToCreateCommand}"
                CornerRadius="5" FontFamily="MontserratMedium"
                FontSize="14"
                Style="{StaticResource PrimaryButtonStyle}" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Padding="12, 6"
                Text="sort"
                Command="{Binding SortByNameAscCommand}"
                CornerRadius="5" FontFamily="MontserratMedium"
                FontSize="14"
                Style="{StaticResource PrimaryButtonStyle}" />

        <ListView Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0"
                        ItemsSource="{Binding Subjects}">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="m:SubjectListModel">
                    <ViewCell>
                        <Grid ColumnDefinitions="*,*,*,*">
                            <Label Grid.Column="0"                                  
                                   FontSize="12" LineBreakMode="WordWrap"
                                   Text="{Binding Abbreviation}"
                                   TextColor="White" VerticalOptions="End" />

                            <Label Grid.Column="1"                                  
                                    FontSize="12" LineBreakMode="WordWrap"
                                    Text="{Binding Name}"
                                    TextColor="White" VerticalOptions="End" />

                            <Button Grid.Column="2"
                                    Text="delete"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding Source={x:Reference SubjectListViewRoot}, Path=BindingContext.RemoveIngredientCommand}"
                                    CommandParameter="{Binding Id}" />
                            <Button Grid.Column="3"
                                    Text="edit"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding Source={x:Reference SubjectListViewRoot}, Path=BindingContext.GoToEditCommand}"
                                    CommandParameter="{Binding Id}" />              
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</views:ContentPageBase>
